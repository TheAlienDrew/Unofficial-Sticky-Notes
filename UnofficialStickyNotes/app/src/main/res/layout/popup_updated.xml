<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_updated"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <ScrollView
        android:id="@+id/popup_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/closePopupBtn"
        android:paddingStart="10sp"
        android:paddingEnd="10sp" >

        <LinearLayout
            android:id="@+id/popup_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/popupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popupInfo" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/closePopupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp"
        android:text="@string/closeBtn" />

</RelativeLayout>