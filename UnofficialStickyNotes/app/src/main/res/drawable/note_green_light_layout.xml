<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/greenLightStroke" />
            <corners android:radius="3dp"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/greenLightBackground" />
            <corners android:bottomLeftRadius="3dp"
                android:bottomRightRadius="3dp"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</layer-list>